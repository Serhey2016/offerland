# Dockerfile for MCP Server
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies
RUN npm install -g @agentdeskai/browser-tools-mcp@latest

# Expose the port that MCP server will run on
EXPOSE 3025

# Set environment variables
ENV NODE_ENV=development

# Command to run the MCP server and keep container alive
CMD ["sh", "-c", "npx @agentdeskai/browser-tools-mcp@latest & python3 -m http.server 3025 --bind 0.0.0.0 & sleep infinity"]
